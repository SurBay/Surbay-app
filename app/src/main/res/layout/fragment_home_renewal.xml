<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeRenewalFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="52dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginVertical="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/surbay_logo_renewal"
                />
            <ImageView
                android:id="@+id/bt_bell"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="124dp"
                android:layout_marginEnd="12dp"
                android:layout_toRightOf="@+id/logo"
                android:src="@drawable/bell_activated"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/logo"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/renewal_background">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/vp_banner"
                        android:layout_width="374dp"
                        android:layout_height="208dp"
                        android:background="@drawable/round_border_white_fill"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="12dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginVertical="6dp">
                        <TextView
                            android:layout_width="228dp"
                            android:layout_height="23dp"
                            android:text="리서치 게시판"
                            android:textColor="@color/text_black"
                            android:textSize="17dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dp"
                        android:background="@color/gray"
                        android:scaleType="centerInside"
                        android:src="@drawable/leftarrow" />
                </RelativeLayout>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_research"
                    android:layout_width="373.92dp"
                    android:layout_height="171dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10.26dp">
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginVertical="6dp">
                        <TextView
                            android:layout_width="228dp"
                            android:layout_height="23dp"
                            android:text="투표 게시판"
                            android:textSize="17dp"
                            android:textColor="@color/text_black"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dp"
                        android:background="@color/gray"
                        android:scaleType="centerInside"
                        android:src="@drawable/leftarrow" />
                </RelativeLayout>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_vote"
                    android:layout_width="319.2dp"
                    android:layout_height="171dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10.26dp">
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginVertical="6dp">
                        <TextView
                            android:layout_width="228dp"
                            android:layout_height="23dp"
                            android:text="리서치 Tip"
                            android:textColor="@color/text_black"
                            android:textSize="17dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dp"
                        android:background="@color/gray"
                        android:scaleType="centerInside"
                        android:src="@drawable/leftarrow" />
                </RelativeLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_research_tip"
                    android:layout_width="373.92dp"
                    android:layout_height="171dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10.26dp">
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</FrameLayout>