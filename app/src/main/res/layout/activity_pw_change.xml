<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/leftarrow2"
            android:scaleType="centerInside"
            android:id="@+id/pwchange_back"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="비밀번호 변경"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/pwchange_origin_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/box_white"
                android:ems="10"
                android:hint="현재 비밀번호"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textSize="15dp"
                android:tag="0"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/pwchange_origin_visible_toggle"
                android:layout_alignRight="@id/pwchange_origin_password"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/visibletoggle"
                android:scaleType="centerInside"
                android:background="@color/white"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pwchange_check_oripw"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="10dp"
            android:text="비밀번호가 일치하지 않습니다"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/pwchange_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/box_white"
                android:ems="10"
                android:hint="새로운 비밀번호"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textSize="15dp"
                android:tag="0"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/pwchange_new_visible_toggle"
                android:layout_alignRight="@id/pwchange_new_password"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/visibletoggle"
                android:scaleType="centerInside"
                android:background="@color/white"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pwchange_pw_length"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="10dp"
            android:text="6자 이상의 영문/숫자 조합 (대/소문자 구분)"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/pwchange_new_password_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/box_white"
            android:ems="10"
            android:hint="새로운 비밀번호 확인"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textSize="15dp"
            android:tag="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pwchange_check_newpw"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="10dp"
            android:text="비밀번호가 일치하지 않습니다"
            android:visibility="gone"/>
        <Button
            android:id="@+id/pwchange_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/white"
            android:background="@drawable/round_border_teal_list"
            android:backgroundTint="@color/teal_200"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>