<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/renewal_background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="4.5dp"
        android:background="@drawable/round_border_white_fill">
        <ImageView
            android:id="@+id/iv_board_content_item_image"
            android:layout_width="187dp"
            android:layout_height="187dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_board_content_item_title"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="[기획 리서치 3탄] 환경 보호에 대한 MZ의 생각"
            android:textSize="17.1dp"
            android:textStyle="bold"
            android:textColor="@color/text_color48"
            android:maxLines="2" />
        <TextView
            android:id="@+id/tv_board_content_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="14dp"
            android:textSize="11.4dp"
            android:textColor="@color/text_color70"
            android:text="09.01" />

    </LinearLayout>
</LinearLayout>
