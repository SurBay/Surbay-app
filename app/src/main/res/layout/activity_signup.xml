<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray">
    <LinearLayout
        android:layout_marginTop="76dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서베이 회원가입"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:layout_marginLeft="51dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="*필수"
            android:textColor="@color/nav_gray"></TextView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="51dp"
        >
        <EditText
            android:id="@+id/userid"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/EdittextTheme"
            android:inputType="text"
            android:privateImeOptions="defaultInputmode=english"
            android:background="@drawable/box_white"
            android:hint="아이디*"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@"
            android:textSize="15sp"
            android:textColor="@color/text_black_70"
            android:id="@+id/username_center"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/userid"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/username_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        <Spinner
            android:id="@+id/username_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:minWidth="0dp"
            android:maxHeight="0dp"

            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            android:hint="이메일 선택"
            android:textColorHint="@color/text_black"
            android:textSize="15dp"
            android:backgroundTint="@color/text_black_70"

            />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_check_id"
        android:layout_marginHorizontal="52dp"
        android:textSize="12.5sp"
        android:text="중복 확인 중입니다."
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="51dp"
            android:background="@drawable/box_white"
            android:ems="10"
            android:hint="비밀번호*"
            style="@style/EdittextTheme"
            android:inputType="textPassword"
            android:tag="0"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/visible_toggle"
            android:layout_alignRight="@id/password"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/visibletoggle"
            android:scaleType="centerInside"
            android:background="@color/white"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_pw_length"
        android:layout_marginHorizontal="52dp"
        android:textSize="12.5dp"
        android:text="6자 이상의 영문/숫자 조합 (대/소문자 구분)"
        android:visibility="gone"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="51dp"
        style="@style/EdittextTheme"
        android:background="@drawable/box_white"
        android:ems="10"
        android:hint="비밀번호 확인*"
        android:inputType="textPassword"
        android:tag="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_check_pw"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="10dp"
        android:text="비밀번호가 일치하지 않습니다"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/EdittextTheme"
        android:inputType="textPersonName"
        android:privateImeOptions="defaultInputmode=english"
        android:background="@drawable/box_white"
        android:hint="닉네임*"
        android:layout_marginHorizontal="51dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_check_name"
        android:layout_marginHorizontal="52dp"
        android:textSize="12.5sp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/userphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/userphone_check"
            android:background="@drawable/box_white"
            android:hint="휴대폰 번호*"
            android:inputType="number"
            style="@style/EdittextTheme"/>
        <Button
            android:id="@+id/userphone_check"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="인증하기"
            android:textSize="16dp"
            android:textColor="@color/teal_200"
            android:background="@drawable/round_border_teal_list"
            android:layout_alignBottom="@id/userphone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="51dp"
            android:clickable="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/phone_checknumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/EdittextTheme"
            android:inputType="number"
            android:privateImeOptions="defaultInputmode=english"
            android:background="@drawable/box_white"
            android:hint="인증번호*"
            android:layout_marginHorizontal="51dp"
            android:layout_marginVertical="5dp"
            android:enabled="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_timer"
            android:layout_alignRight="@id/phone_checknumber"
            android:text="03:00"
            android:textSize="15sp"
            android:textColor="@color/teal_200"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_PCNtext"
        android:text="3분 내에 입력해주세요"
        android:textSize="12.5sp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:layout_marginHorizontal="52dp"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingHorizontal="51dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="남성"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            android:textColor="@drawable/text_selector"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/usersex_M"
            android:clickable="true"
            android:background="@drawable/sexselector_m"
            />

        <Button
            android:id="@+id/usersex_F"
            android:layout_toRightOf="@id/usersex_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="여성"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="7dp"
            android:textColor="@drawable/text_selector"
            android:textSize="15sp"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/sexselector_f"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            >
            <Spinner
                android:id="@+id/signup_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:maxHeight="0dp"
                android:paddingTop="8dp"
                android:paddingBottom="7dp"
                android:hint="출생연도"
                android:backgroundTint="@color/text_black_70"
            />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_agree_check"
            android:layout_marginLeft="51dp"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:buttonTint="#8E8E8E"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infoagree"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:id="@+id/user_agree_info"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_70"
            android:text="에 동의합니다"
            />
    </LinearLayout>
    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/round_border_big_button_teal"
        android:backgroundTint="@color/teal_200"
        android:paddingHorizontal="71dp"
        android:paddingTop="11dp"
        android:paddingBottom="10dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginHorizontal="51dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>