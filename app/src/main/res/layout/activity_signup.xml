<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서베이 회원가입"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="*필수"
            android:textColor="@color/text_black_70"></TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:privateImeOptions="defaultInputmode=english"
            android:background="@drawable/box_white"
            android:hint="아이디*"
            android:textColorHint="@color/text_black_70"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_toLeftOf="@id/username_center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@"
            android:textColor="@color/text_black_70"
            android:id="@+id/username_center"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="5dp"
            android:layout_alignBottom="@id/userid"
            android:layout_centerHorizontal="true"
            />
        <Spinner
            android:id="@+id/username_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/box_white"
            android:hint="이메일 선택"
            android:textColorHint="@color/text_black_70"
            android:textSize="15dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/username_center"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_check_id"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="10dp"
        android:text="중복 확인 중입니다."
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/box_white"
            android:ems="10"
            android:hint="비밀번호*"
            android:textColorHint="@color/text_black_70"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textSize="15dp"
            android:tag="0"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/visible_toggle"
            android:layout_alignRight="@id/password"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/visibletoggle"
            android:scaleType="centerInside"
            android:background="@color/white"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_pw_length"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="10dp"
        android:text="6자 이상의 영문/숫자 조합 (대/소문자 구분)"
        android:visibility="gone"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/box_white"
        android:ems="10"
        android:hint="비밀번호 확인*"
        android:textColorHint="@color/text_black_70"
        android:inputType="textPassword"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp"
        android:textSize="15dp"
        android:tag="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_check_pw"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="10dp"
        android:text="비밀번호가 일치하지 않습니다"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingVertical="10dp"
        android:paddingHorizontal="12dp"
        android:inputType="textPersonName"
        android:privateImeOptions="defaultInputmode=english"
        android:background="@drawable/box_white"
        android:hint="닉네임*"
        android:textColorHint="@color/text_black_70"
        android:textSize="15dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_check_name"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="10dp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/userphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/userphone_check"
            android:background="@drawable/box_white"
            android:hint="휴대폰 번호*"
            android:textColorHint="@color/text_black_70"
            android:inputType="number"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textSize="15dp"/>
        <Button
            android:id="@+id/userphone_check"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="인증하기"
            android:textSize="16dp"
            android:textColor="@color/teal_200"
            android:background="@drawable/round_border_teal_list"
            android:layout_alignBottom="@id/userphone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:clickable="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/phone_checknumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:inputType="number"
            android:privateImeOptions="defaultInputmode=english"
            android:background="@drawable/box_white"
            android:hint="인증번호*"
            android:textColorHint="@color/text_black_70"
            android:textSize="15dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:enabled="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_timer"
            android:layout_alignRight="@id/phone_checknumber"
            android:text="03:00"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_PCNtext"
        android:text="3분 내에 입력해주세요"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:layout_marginHorizontal="45dp"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingHorizontal="40dp"
        >
        <Button
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="남성"
            android:textColor="@color/text_black_70"
            android:gravity="center"
            android:id="@+id/usersex_M"
            android:textSize="15dp"
            android:clickable="true"
            android:background="@drawable/sexselector_m"
            />

        <Button
            android:id="@+id/usersex_F"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/usersex_M"
            android:background="@drawable/sexselector_m"
            android:clickable="true"
            android:gravity="center"
            android:text="여성"
            android:textColor="@color/text_black_70"
            android:textSize="15dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_alignLeft="@id/signup_age"
                android:background="@drawable/box_notfill"
                />
            <Spinner
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:id="@+id/signup_age"
                android:hint="출생연도"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_agree_check"
            android:layout_marginLeft="40dp"
            android:buttonTint="#8E8E8E"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infoagree"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:id="@+id/user_agree_info"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_70"
            android:text="에 동의합니다"
            />
    </LinearLayout>
    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/white"
        android:background="@drawable/round_border_white"
        android:backgroundTint="@color/teal_200"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>