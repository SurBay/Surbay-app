<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:orientation="horizontal">
    <View
        android:id="@+id/focus_thief"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <ImageButton
        android:visibility="gone"
        android:id="@+id/erase_poll"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/write_minus_poll"
        android:layout_marginRight="5dp"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:layout_marginLeft="6dp"
        android:layout_gravity="center_vertical"></ImageButton>
        <EditText
            android:id="@+id/content"
            android:layout_gravity="center_vertical|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="항목 입력"
            android:textColorHint="@color/nav_gray"
            android:backgroundTint="@color/nav_gray"
            android:textSize="16sp"
            android:textColor="@color/text_black"></EditText>
    <ImageButton
        android:id="@+id/add_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/poll_add_pic"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:layout_marginLeft="6dp"
        android:layout_gravity="center_vertical"></ImageButton>

</LinearLayout>