<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp">
        <TextView
            android:clickable="true"
            android:id="@+id/tv_message_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="36.5dp"
            android:text="취소"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/BDBDBD" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="쪽지 보내기"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/text_color48" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="쪽지를 보내면 상대방에게 내 닉네임이 노출됩니다"
                android:textSize="11.5dp"
                android:textColor="#6C6969" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_message_positive"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36.5dp"
            android:text="보내기"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/text_color3A" />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="0dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginHorizontal="36.5dp"
        android:gravity="top"
        android:hint="내용을 입력하세요"
        android:textSize="11.5dp"
        android:textColor="@color/text_color70" />

</LinearLayout>