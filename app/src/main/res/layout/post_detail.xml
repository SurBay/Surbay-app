<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_70"
            android:textSize="12.5sp"
            android:text="작성자" />
        <TextView
            android:id="@+id/author_info"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_70"
            android:textSize="12.5sp"
            android:text="(ㅇㅇ대 ㅇㅇ학과 ㅇㅇ강의 수강생)" />
    </LinearLayout>
    <TextView
        android:id="@+id/title"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17.5sp"
        android:textColor="@color/text_black"
        android:textStyle="bold"
        android:text="글 제목" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.5sp"
            android:textColor="@color/text_black_70"
            android:text="설문 대상" />
        <TextView
            android:id="@+id/target"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:text="설문 대상을 입력해주세요" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/prize_layout"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_70"
            android:textSize="12.5sp"
            android:text="참여 보상" />
        <TextView
            android:id="@+id/prize"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:scrollHorizontally="false"
            android:textSize="15sp"
            android:text="스타벅스 아메리카노 3명" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="26dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.5sp"
                android:text="소요 시간"
                android:textColor="@color/text_black_70"
                android:id="@+id/detail_est_time_text"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="50dp"
                />
            <TextView
                android:id="@+id/detail_est_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="12.5sp"
                android:layout_below="@id/detail_est_time_text"
                android:layout_centerHorizontal="true"
                android:text="  3~4분"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_black_70"
                android:text="설문 기한"
                android:textSize="12.5sp"
                android:id="@+id/detail_surb_date_text">
            </TextView>
            <TextView
                android:id="@+id/deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_surb_date_text"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_black"
                android:text="12.29 - 01.04 오전 12시"
                android:lines="1">
            </TextView>
            <TextView
                android:id="@+id/detail_dday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deadline"
                android:visibility="invisible"
                android:textSize="12.5sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/teal_200"
                android:textStyle="bold"
                android:text="D-3">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_70"
                android:text="설문 진행"
                android:textSize="12.5sp"
                android:id="@+id/detail_surb_parti_text"
                android:layout_centerHorizontal="true">
            </TextView>
            <TextView
                android:id="@+id/participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:layout_below="@id/detail_surb_parti_text"
                android:layout_centerHorizontal="true"
                android:text="21/50"
                android:textSize="12.5sp"
                />
            <TextView
                android:id="@+id/participants_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_200"
                android:layout_below="@id/participants"
                android:layout_centerHorizontal="true"
                android:textSize="12.5sp"
                android:textStyle="bold"
                android:text="90%"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/detail_parti_layout"
        >
        <Button
            android:id="@+id/surveyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="설문 참여하기"
            android:paddingHorizontal="25dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingTop="11dp"
            android:paddingBottom="10dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/round_border_teal_fill"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/detail_author_layout"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/surveyExButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="25dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingTop="11dp"
            android:paddingBottom="10dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_margin="10dp"
            android:text="설문 연장하기"
            android:background="@drawable/round_border_teal_fill"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/surveyEndButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="25dp"
            android:textSize="15sp"
            android:paddingTop="11dp"
            android:paddingBottom="10dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_margin="10dp"
            android:text="설문 마감하기"
            android:textStyle="bold"
            android:background="@drawable/round_border_teal_list"
            android:textColor="@color/teal_200"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/gray_FB"
        ></LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/post_detail_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="26dp"
                    android:paddingVertical="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_70"
                        android:textSize="12.5sp"
                        android:text="내용"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:scrollHorizontally="false"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:text="설문 부탁드립니다"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:paddingHorizontal="26dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/detail_reply_list"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:paddingHorizontal="15dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border_white_fill"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_marginBottom="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="댓글을 입력하세요"
                android:textSize="15sp"
                android:background="@color/transparent"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_black_70"
                android:paddingStart="5dp"
                android:id="@+id/reply_enter"
                android:layout_toLeftOf="@id/reply_enter_button"
                android:layout_centerVertical="true"
                />
            <ImageButton
                android:layout_marginRight="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/reply_enter_button"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/send"
                android:scaleType="centerInside"
                android:background="@color/white"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/gray" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />


    </RelativeLayout>

</FrameLayout>