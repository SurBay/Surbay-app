<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    android:layout_width="319.2dp"
    android:layout_height="171dp"
    android:background="@color/renewal_background">

        <LinearLayout
            android:id="@+id/ll_home_vote_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/home_vote_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_home_vote_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Q. 치킨이랑 더 잘 어울리는 음료는?"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/fl_poll2"
                android:layout_width="match_parent"
                android:layout_height="91.2dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="9.12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_content2_1"
                    android:layout_width="91.2dp"
                    android:layout_height="91.2dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="48dp"
                    android:paddingHorizontal="16dp"
                    android:text="둘(사진있음)"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/text_black"
                    android:maxLines="4"
                    android:lineHeight="16dp"
                    android:background="@drawable/round_border_general_poll_primary" />

                <TextView
                    android:id="@+id/tv_content2_2"
                    android:layout_width="91.2dp"
                    android:layout_height="91.2dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="48dp"
                    android:background="@drawable/round_border_general_poll_secondary"
                    android:gravity="center"
                    android:text="맥주"
                    android:textColor="@color/text_black"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:lineHeight="16dp"
                    android:maxLines="4"/>
                <ImageView
                    android:layout_width="32.5dp"
                    android:layout_height="32.5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/general_vs" />
            </FrameLayout>
            <FrameLayout
                android:visibility="gone"
                android:id="@+id/fl_poll3"
                android:layout_width="match_parent"
                android:layout_height="91.2dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="9.12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_content3_1"
                    android:layout_width="91.2dp"
                    android:layout_height="91.2dp"
                    android:paddingHorizontal="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="94dp"
                    android:text="소주"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/text_black"
                    android:maxLines="4"
                    android:lineHeight="16dp"
                    android:background="@drawable/round_border_general_poll_primary" />
                <TextView
                    android:id="@+id/tv_content3_2"
                    android:layout_width="91.2dp"
                    android:layout_height="91.2dp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="맥주"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:maxLines="4"
                    android:textColor="@color/text_black"
                    android:lineHeight="16dp"
                    android:background="@drawable/round_border_general_poll_secondary" />
                <TextView
                    android:id="@+id/tv_content3_3"
                    android:layout_width="91.2dp"
                    android:layout_height="91.2dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="94dp"
                    android:paddingHorizontal="20dp"
                    android:gravity="center"
                    android:text="와인"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/text_black"
                    android:maxLines="4"
                    android:lineHeight="16dp"
                    android:background="@drawable/round_border_general_poll_primary" />
                <ImageView
                    android:layout_width="32.5dp"
                    android:layout_height="32.5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/general_vs" />
                <ImageView
                    android:layout_width="32.5dp"
                    android:layout_height="32.5dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/general_vs" />
            </FrameLayout>
            <FrameLayout
                android:visibility="gone"
                android:id="@+id/fl_poll4"
                android:layout_width="match_parent"
                android:layout_height="91.2dp"
                android:layout_marginTop="9.12dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/tv_content4_1"
                    android:layout_width="102.6dp"
                    android:layout_height="44.46dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="52dp"
                    android:layout_marginBottom="23dp"
                    android:paddingHorizontal="12dp"
                    android:text="마라탕"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/text_black"
                    android:maxLines="2"
                    android:lineHeight="16dp"
                    android:background="@drawable/round_border_general_poll_primary" />

                <TextView
                    android:id="@+id/tv_content4_2"
                    android:layout_width="102.6dp"
                    android:layout_height="44.46dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="52dp"
                    android:layout_marginBottom="23dp"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/round_border_general_poll_secondary"
                    android:gravity="center"
                    android:text="파스타"
                    android:textColor="@color/text_black"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:lineHeight="16dp" />

                <TextView
                    android:id="@+id/tv_content4_3"
                    android:layout_width="102.6dp"
                    android:layout_height="44.46dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="23dp"
                    android:paddingHorizontal="12dp"
                    android:text="떢볶이"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/text_black"
                    android:background="@drawable/round_border_general_poll_secondary"
                    android:maxLines="2"
                    android:lineHeight="16dp" />
                <TextView
                    android:id="@+id/tv_content4_4"
                    android:layout_width="102.6dp"
                    android:layout_height="44.46dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="23dp"
                    android:paddingHorizontal="12dp"
                    android:text="돈까스"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/text_black"
                    android:background="@drawable/round_border_general_poll_primary"
                    android:maxLines="2"
                    android:lineHeight="16dp" />

                <ImageView
                    android:layout_width="32.5dp"
                    android:layout_height="32.5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/general_vs" />

                <TextView
                    android:id="@+id/tv_content4_extra"
                    android:layout_width="40dp"
                    android:layout_height="30.5dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="125dp"
                    android:background="@drawable/round_border_general_extra_poll_secondary"
                    android:gravity="center"
                    android:text="+7"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8.12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="19.38dp"
                android:background="#C4C4C4" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/tv_home_vote_item_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조회 5명"
                    android:textColor="@color/text_black_70"
                    android:textSize="12.5dp" />
                <TextView
                    android:id="@+id/tv_home_vote_item_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="댓글 2개"
                    android:textColor="@color/text_black_70"
                    android:textSize="12.5dp" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_home_vote_item_like"
                        android:layout_width="17.1dp"
                        android:layout_height="17.1dp"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/heart_empty" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>