<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MypageSettingMain"
    android:padding="15dp"
    android:background="@color/gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/leftarrow2"
            android:scaleType="centerInside"
            android:id="@+id/setting_report_back"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="신고/문의"
            android:id="@+id/setting_report_title"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 채널을 통해 신고/문의 부탁드립니다"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/setting_report_title"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border_white_fill"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공식 채널"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/setting_report_C_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="15dp"
            android:layout_below="@id/setting_report_C_title"
            android:id="@+id/setting_report_C_for"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="surbay.official@gmail.com"
            android:textSize="15dp"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/setting_report_C_title"
            android:layout_alignBaseline="@id/setting_report_C_for"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인스타그램"
            android:textSize="15dp"
            android:layout_below="@id/setting_report_C_for"
            android:id="@+id/setting_report_C_instagram"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" @surbay_official"
            android:textSize="15dp"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/setting_report_C_title"
            android:layout_alignBaseline="@id/setting_report_C_instagram"
            />
    </RelativeLayout>
</LinearLayout>