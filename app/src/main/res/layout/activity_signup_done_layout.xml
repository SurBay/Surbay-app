<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/gray">
        <LinearLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="51dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SurBay 회원가입"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"/>
            <TextView
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="인증 메일을 발송했습니다"
                android:textStyle="bold"
                android:textColor="@color/text_gray"></TextView>
            <TextView
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24시간 내에 인증 메일 내 링크를 눌러주시면 회원가입이 완료됩니다."
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColorHint="@color/text_gray"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/signup_done_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메인으로 이동하기"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/round_border_white"
            android:backgroundTint="@color/teal_200"
            android:paddingHorizontal="71dp"
            android:paddingTop="11dp"
            android:paddingBottom="10dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginHorizontal="51dp"
            android:layout_marginTop="13dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/gray" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />


    </RelativeLayout>

</FrameLayout>