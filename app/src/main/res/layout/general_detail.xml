<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_FB">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/general_detail_swipe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_share"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@color/free_theme_color"

                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center">
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/share_menu" />
                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="이제 투표글도 공유할 수 있어요!\n 위 버튼을 눌러보세요!"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_70"
                    android:textSize="12.5sp"
                    android:text="03.09 12:14 / " />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_70"
                    android:textSize="12.5sp"
                    android:text="작성자" />
                <TextView
                    android:id="@+id/author_info"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_70"
                    android:textSize="12.5sp"
                    android:text="Lv.3" />
            </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17.5sp"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:text="Q. 치킨이랑 더 잘 어울리는 음료는?" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:text="보통 치킨 먹을 때 치콜하세요 치맥하세요?" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/multi_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_70"
                    android:scrollHorizontally="false"
                    android:textSize="12.5sp"
                    android:text="*복수 응답 가능" />
                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_70"
                    android:scrollHorizontally="false"
                    android:textSize="12.5sp"
                    android:layout_marginBottom="12.5dp"
                    android:text=" / 03:09 20:00 투표 마감" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:src="@drawable/general_participants"></ImageView>
                <TextView
                    android:id="@+id/participants"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1명 참여"
                    android:textColor="@color/text_black_70"
                    android:textSize="12.5sp"></TextView>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:elevation="0dp"
                android:id="@+id/polls"
                android:paddingHorizontal="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/polls_done"
                android:visibility="gone"
                android:paddingHorizontal="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/detail_parti_layout"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="18dp"
                android:paddingVertical="3dp"
                >
                <TextView
                    android:id="@+id/check_results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="26dp"
                    android:textSize="12.5sp"
                    android:textColor="@color/text_black_70"
                    android:text="@string/check_votes" />
                <Button
                    android:stateListAnimator="@null"
                    android:id="@+id/surveyButton"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_gravity="center"
                    android:text="다시 투표하기"
                    android:paddingHorizontal="3dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="9dp"
                    android:paddingBottom="8dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:background="@drawable/round_border_teal_fill"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_general_detail_end"
                    android:visibility="gone"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="투표 마감됨"
                    android:background="@drawable/border_gray_fill"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="9dp"
                    android:paddingBottom="8dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textColor="@color/gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <Button
                    android:id="@+id/btn_general_detail_like"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="26dp"
                    android:background="@drawable/round_border_gray_list"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="17dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="8dp"
                    android:text="공감 99+"
                    android:textColor="@color/nav_gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray_FB"
                ></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="10dp"
                            android:orientation="vertical">
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/rv_vote_detail_comment"
                                />
                        </LinearLayout>
                    </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_FB"
            android:paddingHorizontal="15dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border_white_fill"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:paddingVertical="5dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/iv_vote_detail_reply"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/reply_teal" />
                <EditText
                    android:id="@+id/et_vote_detail_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/reply_enter_button"
                    android:layout_toRightOf="@id/iv_vote_detail_reply"
                    android:background="@color/transparent"
                    android:hint="닉네임으로 댓글 달기"
                    android:paddingStart="5dp"
                    android:inputType="none"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@color/poll_color_secondary_B6"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/nav_gray"
                    android:textSize="15sp" />
                <ImageButton
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/reply_enter_button"
                    android:adjustViewBounds="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/send"
                    android:scaleType="centerInside"
                    android:background="@color/white"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/gray" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />


    </RelativeLayout>

</FrameLayout>