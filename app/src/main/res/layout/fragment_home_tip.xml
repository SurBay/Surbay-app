<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="18dp"
    android:background="@color/renewal_background">
    <LinearLayout
        android:id="@+id/ll_home_tip_item1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="171dp"
        android:background="@drawable/home_item"
        android:layout_marginStart="2.28dp">
        <TextView
            android:id="@+id/tv_tip_category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6.98dp"
            android:text="#구글폼"
            android:textSize="11.4dp"
            android:textStyle="bold"
            android:textColor="@color/teal_200" />
        <TextView
            android:id="@+id/tv_tip_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="10dp"
            android:text="설문조사 결과는 공유하자!!"
            android:textSize="14.82dp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:lineHeight="17.1dp"
            android:lines="2"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_tip_des1"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="left"
            android:layout_marginTop="1dp"
            android:layout_marginHorizontal="10dp"
            android:text="Surbay는 현재 설문조사의 결과를 손쉽게 공유할 수 있는 방법에 대해 연구중입니다. 성공적인 틀을 개발..."
            android:textSize="13.11dp"
            android:textColor="@color/text_black_70"
            android:lines="4"
            android:lineHeight="17.1dp"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="12dp"
            android:background="@color/gray2" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginVertical="4.56dp">
            <ImageView
                android:layout_width="18.24dp"
                android:layout_height="18.24dp"
                android:src="@drawable/like" />
            <TextView
                android:id="@+id/tv_tip_likes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.56dp"
                android:text="2"
                android:textSize="14.82dp"
                android:textStyle="bold"
                android:textColor="@color/teal_200" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_home_tip_item2"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="171dp"
        android:background="@drawable/home_item"
        android:layout_marginStart="2.28dp">
        <TextView
            android:id="@+id/tv_tip_category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6.98dp"
            android:text="#구글폼"
            android:textSize="11.4dp"

            android:textStyle="bold"
            android:textColor="@color/teal_200" />
        <TextView
            android:id="@+id/tv_tip_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="10dp"
            android:text="설문조사 결과는 공유하자!!"
            android:textSize="14.82dp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:lineHeight="17.1dp"
            android:lines="2"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_tip_des2"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="left"
            android:layout_marginTop="1dp"
            android:layout_marginHorizontal="10dp"
            android:text="Surbay는 현재 설문조사의 결과를 손쉽게 공유할 수 있는 방법에 대해 연구중입니다. 성공적인 틀을 개발..."
            android:textSize="13.11dp"
            android:lineHeight="17.1dp"
            android:textColor="@color/text_black_70"
            android:lines="4"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="12dp"
            android:background="@color/gray2" />
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginVertical="4.56dp">
            <ImageView
                android:layout_width="18.24dp"
                android:layout_height="18.24dp"
                android:src="@drawable/like" />
            <TextView
                android:id="@+id/tv_tip_likes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.56dp"
                android:text="2"
                android:textSize="14.82dp"
                android:textStyle="bold"
                android:textColor="@color/teal_200" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>