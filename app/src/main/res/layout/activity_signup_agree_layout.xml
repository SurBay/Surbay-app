<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/gray">
        <LinearLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="51dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SurBay 회원가입"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"/>
            <TextView
                android:layout_marginTop="17.5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관 동의"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColorHint="@color/text_black_70"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/user_agree_check"
                android:layout_marginLeft="51dp"
                android:padding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@drawable/agree_check_selector"
                android:button="@color/transparent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="개인정보 수집, 이용에 동의합니다\n> 약관 전문"
                android:textSize="15sp"
                android:textColor="@color/text_black"
                android:id="@+id/user_agree_info"
                android:clickable="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/user_agree_check2"
                android:layout_marginLeft="51dp"
                android:padding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:buttonTint="#8E8E8E"
                android:button="@color/transparent"
                android:background="@drawable/agree_check_selector"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="서베이 운영정책에 동의합니다\n> 약관 전문"
                android:textSize="15sp"
                android:textColor="@color/text_black"
                android:id="@+id/user_agree_info2"
                android:clickable="true"
                />
        </LinearLayout>
        <Button
            android:id="@+id/signup_agree_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textSize="14sp"
            android:textColor="@color/teal_200"
            android:background="@drawable/round_border_white"
            android:paddingHorizontal="71dp"
            android:paddingTop="11dp"
            android:paddingBottom="10dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginHorizontal="51dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/gray" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />


    </RelativeLayout>

</FrameLayout>