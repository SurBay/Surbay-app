<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:paddingTop="10dp"
    android:paddingHorizontal="15dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/non_cate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="앱 구동 불편 사항"
                    android:textColor="@color/black"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/non_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="제목"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:maxLines="1"/>
            </LinearLayout>
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingVertical="5dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/non_profile"
                    android:background="@drawable/rectangle_rounded"
                    android:backgroundTint="@color/nav_gray"
                    android:layout_marginRight="10dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/non_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/non_profile"
                    android:layout_below="@id/non_date"
                    android:text="익명"
                    android:textSize="13dp"
                    android:textColor="@color/text_gray"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/non_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/non_profile"
                    android:layout_alignTop="@id/non_profile"
                    android:text="날짜"
                    android:textSize="13dp"
                    android:textColor="@color/text_gray"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/non_profile"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/like"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:id="@+id/non_recomimage"
                        />
                    <TextView
                        android:id="@+id/non_recom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:text="3"
                        android:textColor="@color/teal_200" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

