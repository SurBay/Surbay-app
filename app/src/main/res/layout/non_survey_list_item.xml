<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:paddingBottom="15dp"
    android:paddingHorizontal="15dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_tip_item_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="앱 구동 불편 사항"
                    android:textColor="@color/teal_200"
                    android:textSize="13sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tip_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="제목"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/text_black"
                    android:maxLines="1"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16.25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="37.5dp"
                    android:layout_height="37.5dp"
                    android:id="@+id/iv_tip_item_profile"
                    android:background="@drawable/rectangle_rounded"
                    android:backgroundTint="@color/gray"
                    android:layout_marginRight="10dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tip_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_tip_item_profile"
                    android:layout_below="@id/tv_tip_item_date"
                    android:text="익명"
                    android:textSize="12.5sp"
                    android:textColor="@color/text_black_70"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tip_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_tip_item_profile"
                    android:layout_alignTop="@id/iv_tip_item_profile"
                    android:text="날짜"
                    android:textSize="12.5sp"
                    android:textColor="@color/text_black_70"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_tip_item_profile"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:layout_width="12.5dp"
                        android:layout_height="12.5dp"
                        android:src="@drawable/like"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:id="@+id/non_recomimage"
                        />
                    <TextView
                        android:id="@+id/tv_tip_item_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:text="3"
                        android:textColor="@color/teal_200" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

