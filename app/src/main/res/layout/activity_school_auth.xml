<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/leftarrow2"
            android:scaleType="centerInside"
            android:id="@+id/schoolauth_back"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="학교 인증"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/schoolauth_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingVertical="10dp"
                android:paddingHorizontal="12dp"
                android:inputType="text"
                android:privateImeOptions="defaultInputmode=english"
                android:background="@drawable/box_white"
                android:hint="아이디"
                android:textSize="15dp"
                android:layout_marginLeft="40dp"
                android:layout_toLeftOf="@id/schoolauth_username_center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@"
                android:id="@+id/schoolauth_username_center"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="5dp"
                android:layout_alignBottom="@id/schoolauth_userid"
                android:layout_centerHorizontal="true"
                />
            <Spinner
                android:id="@+id/schoolauth_username_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/box_white"
                android:hint="이메일 선택"
                android:textSize="15dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@id/schoolauth_username_center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">
            <TextView
                android:id="@+id/schoolauth_userphone_check"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="인증하기"
                android:textSize="16dp"
                android:textColor="@color/teal_200"
                android:background="@drawable/round_border_teal_list"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:clickable="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/schoolauth_phone_checknumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingVertical="10dp"
                android:paddingHorizontal="12dp"
                android:inputType="number"
                android:privateImeOptions="defaultInputmode=english"
                android:background="@drawable/box_white"
                android:hint="인증번호"
                android:textSize="15dp"
                android:layout_marginHorizontal="40dp"
                android:enabled="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schoolauth_timer"
                android:layout_alignRight="@id/schoolauth_phone_checknumber"
                android:text="03:00"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/schoolauth_PCNtext"
            android:text="3분 내에 입력해주세요"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:layout_marginHorizontal="45dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/schoolauth_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/white"
            android:background="@drawable/round_border_teal_list"
            android:backgroundTint="@color/teal_200"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>