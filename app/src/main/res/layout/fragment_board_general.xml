<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:padding="5dp">
        <Button
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="NEW"
            android:textSize="13dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/fragment1_new_sort_button"
            style="@style/TabButtonSelect"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:id="@+id/fragment1_date_sort_button"
            style="@style/TabButtonNotSelect"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:src="@drawable/general_button_likes"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@id/fragment1_new_sort_button"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:id="@+id/fragment1_goal_sort_button"
            style="@style/TabButtonNotSelect"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/general_button_parti"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@id/fragment1_date_sort_button"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:background="@color/gray">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refresh_boards"
            >
            <ListView
                android:divider="#00000000"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <Button
            android:id="@+id/writeButton"
            android:layout_width="59.28dp"
            android:layout_height="59.28dp"
            android:gravity="center"
            android:background="@drawable/vote_add_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22.8dp"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</LinearLayout>
