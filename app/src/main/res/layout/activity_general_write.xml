<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            >
            <TextView
                android:id="@+id/writeBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:layout_marginTop="21dp"
                android:layout_marginStart="26dp"
                android:textColor="@color/nav_gray"
                android:textSize="17.5sp"
                android:textStyle="bold"
                android:background="@color/white"
                android:gravity="center"
                android:clickable="true"
                android:lines ="1"/>
            <TextView
                android:text="글 작성"
                android:id="@+id/writetitle"
                android:textSize="17.5sp"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/writeDone"
                android:text="등록"
                android:textColor="@color/teal_200"
                android:textStyle="bold"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:textSize="17.5sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="26dp"
                android:gravity="center"
                android:clickable="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="26dp"
                    >
                    <EditText
                        android:id="@+id/write_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="질문"
                        android:textStyle="bold"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/text_black"
                        android:textColorHint="@color/nav_gray"
                        android:textSize="17.5sp"
                        android:lines="1"
                        android:inputType="text"
                        android:background="@color/transparent"
                        ></EditText>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/write_polls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="26dp">
                </androidx.recyclerview.widget.RecyclerView>
                <ImageButton
                    android:id="@+id/write_add_poll"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/add_poll"
                    android:layout_marginVertical="15dp"
                    android:background="@color/transparent"
                    ></ImageButton>

                <TextView
                    android:layout_marginHorizontal="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="투표 옵션"
                    android:textSize="15sp"
                    android:textColor="@color/text_black_70"
                    android:layout_marginBottom="8dp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="20dp"
                    >
                    <CheckBox
                        android:id="@+id/write_multi_response_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/gray2"
                        ></CheckBox>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_70"
                        android:textSize="15sp"
                        android:text = "복수 응답"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="20dp"
                    >
                    <CheckBox
                        android:id="@+id/write_deadline_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/gray2"
                        ></CheckBox>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_70"
                        android:textSize="15sp"
                        android:text = "투표 마감일 "></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_70"
                        android:textSize="13sp"
                        android:text = "(최대 2주)"></TextView>
                    <TextView
                        android:layout_marginStart="7dp"
                        android:id="@+id/write_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:layout_weight="1"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:id="@+id/write_content"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="글 내용을 입력해주세요"
                        android:inputType="textMultiLine"
                        android:scrollHorizontally="false"
                        android:textColor="@color/text_black"
                        android:textSize="13sp"
                        android:textColorHint="@color/nav_gray"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:background="@color/white"
                        ></EditText>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/gray" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />


    </RelativeLayout>

</FrameLayout>