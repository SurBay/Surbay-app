<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="161.88dp"
    android:background="#E5E5E5">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_border_white_fill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="18.24dp"
        android:layout_marginRight="18.24dp"
        android:layout_marginTop="6.84dp"
        android:layout_marginBottom="6.84dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240.84dp"
            android:layout_height="125.4dp"
            android:layout_marginTop="8.12dp"
            android:layout_marginLeft="14.56dp">
            <RelativeLayout
                android:layout_width="214.32dp"
                android:layout_height="40.34dp">

                <ImageView
                    android:id="@+id/iv_research_item_blank"
                    android:layout_width="36.84dp"
                    android:layout_height="36.84dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/research_blank_character" />
                <ImageView
                    android:id="@+id/iv_research_item_character"
                    android:layout_width="36.84dp"
                    android:layout_height="36.84dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/research_character" />
                <ImageView
                    android:id="@+id/iv_research_item_check"
                    android:layout_width="13dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/check"/>
                <TextView
                    android:id="@+id/tv_research_item_author"
                    android:layout_width="175.56dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/iv_research_item_character"
                    android:text="익명"
                    android:textSize="12.54dp"
                    android:textColor="#707070" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_research_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="온라인 강의 학생 만족도 설문 조사"
                android:textSize="17.1dp"
                android:textColor="#484747"
                android:textStyle="bold"
                android:lineHeight="17.1dp"
                android:maxLines="2" />
            <TextView
                android:id="@+id/tv_research_item_target"
                android:layout_width="226.86dp"
                android:layout_height="wrap_content"
                android:text="온라인 강의를 들은 경험이 있는 대학생들 모두"
                android:textSize="14.82dp"
                android:textColor="#707070"
                android:lineHeight="17.1dp"
                android:maxLines="2"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="120.84dp"
            android:background="@color/gray2"
            android:layout_marginLeft="3.42dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="96.9dp"
            android:layout_height="107.16dp"
            android:layout_marginTop="17.1dp"
            android:layout_marginLeft="3.42dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.12dp">
                <TextView
                    android:id="@+id/tv_research_item_indicator"
                    android:layout_width="52.44dp"
                    android:layout_height="17.1dp"
                    android:text="NEW"
                    android:textSize="14.82dp"
                    android:textColor="@color/teal_200"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/iv_research_item_check2"
                    android:layout_width="33.06dp"
                    android:layout_height="13.68dp"
                    android:src="@drawable/participation"
                    android:layout_marginTop="4.56dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.1dp">
                <TextView
                    android:id="@+id/tv_research_item_start"
                    android:layout_width="67.26dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9.12dp"
                    android:text="08.05"
                    android:textSize="12.54dp"
                    android:textColor="#707070" />
                <TextView
                    android:id="@+id/tv_research_item_end"
                    android:layout_width="96.9dp"
                    android:layout_height="wrap_content"
                    android:text="~ 08.12 19:29"
                    android:textSize="12.54dp"
                    android:textColor="#707070"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="84.36dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="12.54dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_research_item_participation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="14.82dp"
                    android:textColor="#707070"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="14.82dp"
                    android:textColor="@color/nav_gray"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_research_item_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="14.82dp"
                    android:textColor="@color/nav_gray"
                    android:textStyle="bold"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>