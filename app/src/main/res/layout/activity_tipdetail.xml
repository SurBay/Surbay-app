<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tip_detail_back"
        style="@style/back_button"
        android:layout_width="24dp"
        android:layout_height="17dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/leftarrow2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="23.8dp"
        android:paddingHorizontal="26dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tip_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textSize="12.5dp"
                android:textColor="@color/text_gray"/>
            <androidx.appcompat.widget.AppCompatTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="12.5dp"
                android:textColor="@color/text_gray"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tip_detail_auther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성자"
                android:textSize="12.5dp"
                android:textColor="@color/text_gray"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tip_detail_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="11dp"
            android:text="내용"
            android:textSize="15dp"
            android:textColor="@color/teal_200"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tip_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="12.5dp"
            android:text="제목"
            android:textStyle="bold"
            android:textSize="17.5dp"
            android:textColor="@color/black"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tip_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_centerVertical="true"
            android:text="내용"
            android:textSize="15dp"
            android:lineSpacingExtra="2dp"
            android:scrollHorizontally="false"
            android:textColor="@color/black"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:id="@+id/tip_images"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="87.5dp"
                android:layout_height="37.5dp"
                android:background="@drawable/round_border_gray_list"
                android:gravity="center"
                android:id="@+id/tipdetail_likesbutton"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like"
                    android:scaleType="fitCenter"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tipdetail_likes"
                    android:text="0"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>