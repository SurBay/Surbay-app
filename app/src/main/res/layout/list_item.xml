<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:paddingBottom="15dp"
    android:paddingHorizontal="15dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:lines="1"
                    android:text="참여완료"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_200"
                    android:maxLines="1"
                    android:layout_marginRight="8dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="제목"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:maxLines="1"/>
                <ImageView
                    android:id="@+id/with_prize"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_gift_box">
                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="6dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp"
                    android:text="내용"
                    android:textSize="13sp"
                    android:textColor="@color/text_black"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16.25dp">

                <ImageView
                    android:id="@+id/list_profile"
                    android:layout_width="37.5dp"
                    android:layout_height="37.5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle_rounded"
                    android:backgroundTint="@color/gray" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date"
                    android:layout_toRightOf="@id/list_profile"
                    android:text="작성자"
                    android:textColor="@color/text_black_70"
                    android:textSize="12.5sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/list_profile"
                    android:layout_toRightOf="@id/list_profile"
                    android:text="날짜"
                    android:textColor="@color/text_black_70"
                    android:textSize="12.5sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/list_profile"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/date"
                    android:text="D-3"
                    android:textColor="@color/teal_200"
                    android:textSize="12.5sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/list_item_background"
                    android:layout_marginEnd="1dp"
                    android:layout_width="82.5dp"
                    android:layout_height="26.25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-1dp"
                    android:layout_alignBottom="@id/list_profile"
                    android:background="@drawable/participants_round_border"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="1dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/participants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="1"
                            android:textColor="@color/teal_200"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/round_hash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text=" / "
                            android:textColor="@color/nav_gray"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/goal_participants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="50"
                            android:textColor="@color/nav_gray"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>