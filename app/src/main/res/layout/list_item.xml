<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingVertical="5dp"
    android:paddingHorizontal="15dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:lines="1"
                    android:text="참여완료"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_200"
                    android:maxLines="1"
                    android:layout_marginRight="5dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="제목"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:maxLines="1"/>
                <ImageView
                    android:id="@+id/with_prize"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_gift_box">
                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="10dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp"
                    android:text="내용"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingVertical="5dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/list_profile"
                    android:backgroundTint="@color/nav_gray"
                    android:background="@drawable/rectangle_rounded"
                    android:layout_marginRight="10dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/list_profile"
                    android:layout_below="@id/date"
                    android:text="작성자"
                    android:textSize="13dp"
                    android:textColor="@color/text_gray"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/list_profile"
                    android:layout_alignTop="@id/list_profile"
                    android:text="날짜"
                    android:textSize="13dp"
                    android:textColor="@color/text_gray"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/date"
                    android:layout_alignTop="@id/list_profile"
                    android:layout_marginLeft="10dp"
                    android:text="D-3"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_200"
                    android:visibility="visible"/>
                <LinearLayout
                    android:id="@+id/list_item_background"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="@drawable/round_border_teal_list"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/participants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="1"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_200"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/round_hash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="/"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/gray2"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/goal_participants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="50"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:textColor="@color/gray2"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>