<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/renewal_background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14.25dp"
        android:layout_marginVertical="13.5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_coupon_seller_item_show"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@color/white"/>
        <TextView
            android:id="@+id/tv_coupon_seller_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="카페 A"
            android:textSize="17dp"
            android:textColor="@color/text_color48" />
    </LinearLayout>

</LinearLayout>