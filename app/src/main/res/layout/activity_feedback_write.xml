<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:id="@+id/feedback_writetop"
        >
        <TextView
            android:id="@+id/feedback_writeBack"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:text="취소"
            android:textColor="@color/gray2"
            android:textStyle="bold"
            android:background="@color/white"
            android:gravity="center"
            android:clickable="true"
            android:lines ="1"/>
        <TextView
            android:text="건의/의견 작성"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/feedback_writeDone"
            android:text="등록"
            android:textColor="@color/teal_200"
            android:textStyle="bold"
            android:background="@color/white"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_below="@id/feedback_writetop">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건의/의견은 등록 후 수정/삭제가 불가합니다.\n
이점을 유의하여 신중히 작성 부탁드립니다."
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리 "
                android:id="@+id/feedback_category_text"
                android:textSize="18dp"
                android:textColor="@color/gray2"
                android:layout_marginRight="10dp"
                ></TextView>
            <Spinner
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/feedback_category_text"
                android:id="@+id/feedback_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="15dp"
                android:inputType="text"
                android:backgroundTint="@color/gray2"
                android:hint="해시태그로 입력해주세요"
                ></Spinner>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문 제목"
                android:textSize="18dp"
                android:textColor="@color/gray2"
                android:layout_marginRight="10dp"
                ></TextView>
            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/feedback_write_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="15dp"
                android:lines="1"
                android:inputType="text"
                android:backgroundTint="@color/gray2"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="15dp"
            >
            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/feedback_write_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="내용을 입력해주세요"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:textSize="15dp"
                android:layout_gravity="top"
                android:gravity="top"
                android:background="@color/white"
                ></EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:layout_above="@id/feedback_writebottom"
        android:gravity="center"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feedback_imagerecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/feedback_writebottom"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/camera"
            android:scaleType="centerInside"
            android:id="@+id/feedback_writeImageadd"
            android:layout_margin="10dp"
            />
        <TextView
            android:text="최대 10장까지 업로드 가능합니다"
            android:textColor="@color/gray2"
            android:textStyle="bold"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/feedback_writeImageadd"/>
    </RelativeLayout>
</RelativeLayout>