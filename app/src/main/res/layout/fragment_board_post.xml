<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:padding="5dp">
        <Button
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="NEW"
            android:textSize="13dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/fragment1_new_sort_button"
            style="@style/TabButtonSelect"
            />
        <Button
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="D-Day"
            android:textSize="13dp"
            android:id="@+id/fragment1_date_sort_button"
            style="@style/TabButtonNotSelect"
            android:layout_toRightOf="@id/fragment1_new_sort_button"
            />
        <Button
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="99%"
            android:textSize="13dp"
            android:id="@+id/fragment1_goal_sort_button"
            style="@style/TabButtonNotSelect"
            android:layout_toRightOf="@id/fragment1_date_sort_button"
            />
        <CheckBox
            android:id="@+id/hide_done_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_toStartOf="@id/hide_done_text"
            android:gravity="center"
            android:buttonTint="@drawable/done_checkbox_selector"
            >

        </CheckBox>
        <TextView
            android:id="@+id/hide_done_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="참여 설문 숨김"
            android:textSize="14sp"
            android:textColor="@color/nav_gray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"></TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:background="@color/gray">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refresh_boards"
            >
            <ListView
                android:divider="#00000000"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <TextView
            android:id="@+id/writeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12.5dp"
            android:gravity="center"
            android:text="설문 작성"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/red_F16"
            android:background="@drawable/round_border_red_list"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            >
        </TextView>
    </RelativeLayout>
</LinearLayout>
