<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyExchangeDetailActivity"
    android:background="@color/renewal_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51.3dp"
        android:background="@color/white">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="0dp"
            android:layout_marginLeft="17.1dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:src="@drawable/leftarrow2"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_my_coupon_detail_qr"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@color/renewal_background"/>
        <TextView
            android:clickable="true"
            android:id="@+id/tv_my_coupon_detail_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_gravity="center_horizontal"
            android:text="사진으로 저장"
            android:textSize="13.5dp"
            android:textColor="@color/BDBDBD" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:text="QR코드를 사장님께 보여주세요"
            android:textSize="17.1dp"
            android:textColor="@color/text_color48" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="52dp"
            android:background="#C4C4C4" />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="27dp">
        <TextView
            android:id="@+id/tv_my_coupon_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카페 A 아이스 아메리카노"
            android:textColor="@color/text_color48"
            android:textSize="20.5dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_my_coupon_detail_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="사용기한 ~2022.10.31"
            android:textColor="@color/text_color3A"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발행일"
                android:textColor="@color/text_color48"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tv_my_coupon_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="2021.08.01"
                android:textColor="@color/text_color48"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>