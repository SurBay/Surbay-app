<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FBFBFB">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마이페이지"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/mypage_profile"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/mypage_myname"
                        android:layout_marginTop="10dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/mypage_profile_image"
                            android:src="@drawable/ic_gift_box"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:text="레벨 2"
                            android:id="@+id/user_level"
                            android:gravity="center"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mypage_myname"
                        android:layout_toRightOf="@id/mypage_profile"
                        android:text="닉네임"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_alignParentLeft="true"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_alignTop="@id/mypage_profile"
                        android:layout_toRightOf="@id/mypage_profile">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="설문 게시글 작성 가능 횟수"
                            android:textSize="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N회"
                            android:textStyle="bold"
                            android:textColor="@color/teal_200"
                            android:id="@+id/mypage_can_sur"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/mypage_willdo_sur"
                            android:text="설문 게시글 작성 1회 추가까지"
                            android:textSize="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N회/7회"
                            android:textStyle="bold"
                            android:textColor="@color/teal_200"
                            android:id="@+id/mypage_willdo_sur"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/mypage_can_sur"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mypage_willdo_sur"
                            android:layout_marginTop="5dp"
                            android:text="설문 (7-n)회 더 참여 시 설문 게시글을 작성할 수 있어요 "
                            android:textSize="13dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="짝짝짝"
                        android:id="@+id/upload_1st"
                        android:textSize="20dp"
                        android:layout_alignBottom="@id/mypage_i_make"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/upload_2nd"
                        android:layout_toRightOf="@id/upload_1st"
                        android:text=" n개 "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_alignBottom="@id/mypage_i_make"
                        android:textColor="@color/teal_200"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/upload_3rd"
                        android:layout_toRightOf="@id/upload_2nd"
                        android:text="업로드!"
                        android:textSize="20dp"
                        android:layout_alignBottom="@id/mypage_i_make"
                        android:textColor="@color/black"/>
                    <ImageButton
                        android:id="@+id/mypage_i_make"
                        android:padding="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY">
                    </ImageButton>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_mypage_make"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="벌써"
                        android:id="@+id/parti_1st"
                        android:textSize="20dp"
                        android:layout_alignBottom="@id/mypage_i_parti"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/parti_2nd"
                        android:layout_toRightOf="@id/parti_1st"
                        android:text=" n개"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_alignBottom="@id/mypage_i_parti"
                        android:textColor="@color/teal_200"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/parti_3rd"
                        android:layout_toRightOf="@id/parti_2nd"
                        android:text="에 참여했어요 감사해요"
                        android:textSize="20dp"
                        android:layout_alignBottom="@id/mypage_i_parti"
                        android:textColor="@color/black"/>
                    <ImageButton
                        android:id="@+id/mypage_i_parti"
                        android:padding="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY">
                    </ImageButton>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_mypage_partic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내가 받은 경품 :"
                        android:id="@+id/get_1st"
                        android:textSize="20dp"
                        android:layout_alignBottom="@id/mypage_i_get"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/get_2nd"
                        android:layout_toRightOf="@id/get_1st"
                        android:text=" n개"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_alignBottom="@id/mypage_i_get"
                        android:textColor="@color/teal_200"/>
                    <ImageButton
                        android:id="@+id/mypage_i_get"
                        android:padding="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY">
                    </ImageButton>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="로그아웃"></Button>
</LinearLayout>

