<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileCouponFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/renewal_background">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_coupon_sell_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginVertical="15dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FBFBFB">
                <Button
                    android:id="@+id/btn_coupon_seller_filter_all"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17.1dp"
                    android:layout_marginVertical="10dp"
                    android:text="All"
                    android:textSize="15dp"
                    style="@style/TabButtonSelect"/>
                <Button
                    android:id="@+id/btn_coupon_seller_filter_cafe"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.7dp"
                    android:layout_marginVertical="10dp"
                    android:layout_toRightOf="@id/btn_coupon_seller_filter_all"
                    android:text="Cafe"
                    android:textSize="15dp"
                    style="@style/TabButtonNotSelect"/>
                <Button
                    android:id="@+id/btn_coupon_seller_filter_food"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.7dp"
                    android:layout_marginVertical="10dp"
                    android:layout_toRightOf="@id/btn_coupon_seller_filter_cafe"
                    android:text="Food"
                    android:textSize="15dp"
                    style="@style/TabButtonNotSelect"/>
                <Button
                    android:id="@+id/btn_coupon_seller_filter_etc"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.7dp"
                    android:layout_marginVertical="10dp"
                    android:layout_toRightOf="@id/btn_coupon_seller_filter_food"
                    android:text="etc"
                    android:textSize="15dp"
                    style="@style/TabButtonNotSelect"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_coupon_seller_supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="9.12dp"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>