<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:layout_marginTop="20dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 재설정하기"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/changepw_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/box_white"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textSize="15dp"
            android:tag="0"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/changepw_visible_toggle"
            android:layout_alignRight="@id/changepw_password"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/visibletoggle"
            android:scaleType="centerInside"
            android:background="@color/white"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changepw_pw_length"
        android:layout_marginHorizontal="66dp"
        android:textSize="10dp"
        android:text="6자 이상의 영문/숫자 조합 (대/소문자 구분)"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/changepw_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:background="@drawable/box_white"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp"
        android:textSize="15dp"
        android:tag="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changepw_check_pw"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="66dp"
        android:textSize="10dp"
        android:text="비밀번호가 일치하지 않습니다"
        android:visibility="gone"/>
    <Button
        android:id="@+id/changepw_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 재설정"
        android:textColor="@color/white"
        android:background="@drawable/round_border_teal_list"
        android:backgroundTint="@color/teal_200"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>