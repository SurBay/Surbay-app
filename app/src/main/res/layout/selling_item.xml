<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/renewal_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="18dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_border_white_fill">
            <ImageView
                android:layout_width="91.2dp"
                android:layout_height="91.2dp"
                android:src="@color/gray2"
                android:layout_marginLeft="20.5dp"
                android:layout_marginVertical="17.1dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="28.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카페 A 아이스 카페라떼"
                    android:textColor="@color/text_color48"
                    android:textSize="17.1dp"
                    android:maxLines="1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="사용 기한 ~2022.10.31"
                    android:textColor="@color/text_color70"
                    android:textSize="15dp"
                    android:maxLines="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="100 크레딧"
                    android:textColor="#3AD1BF"
                    android:textStyle="bold"
                    android:textSize="17.1dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>